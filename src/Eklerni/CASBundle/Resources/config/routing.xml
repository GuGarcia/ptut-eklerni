<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    <route id="eklerni_cas_login" pattern="/login">
        <default key="_controller">EklerniCASBundle:Sign:login</default>
        <option key="i18n">false</option>
    </route>
    <route id="eklerni_cas_login_check" pattern="/login_check">
        <default key="_controller">EklerniCASBundle:Sign:loginCheck</default>
        <requirement key="_method">POST</requirement>
        <option key="i18n">false</option>
    </route>
    <route id="eklerni_cas_logout" pattern="/logout">
        <default key="_controller">EklerniCASBundle:Sign:logout</default>
        <option key="i18n">false</option>
    </route>
    <route id="eklerni_cas_register" pattern="/register">
        <default key="_controller">EklerniCASBundle:Register:register</default>
        <option key="i18n">false</option>
    </route>
    <route id="eklerni_cas_profile" pattern="/profile/update">
        <default key="_controller">EklerniCASBundle:Profile:updateProfile</default>
        <option key="i18n">false</option>
    </route>
    <route id="eklerni_cas_password_change" pattern="/profile/changepassword">
        <default key="_controller">EklerniCASBundle:Profile:changePassword</default>
        <option key="i18n">false</option>
    </route>
</routes>
