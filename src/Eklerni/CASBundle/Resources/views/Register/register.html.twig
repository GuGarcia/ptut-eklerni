{% extends "EklerniCASBundle:Template:template.html.twig" %}
{% block body %}
    {% if error is defined %}
        <div>{{ error.message }}</div>
    {% endif %}
    <div class="header">Registration</div>

    <form action="{{ path('eklerni_cas_register') }}" method="post">
        <div class="body bg-gray">
            <div class="form-group">
                <input type="text" id="username" name="_username"
                       placeholder="{{ form.username.vars.label }}" class="form-control"/>
            </div>

            <div class="form-group">
                <input type="password" id="password" name="_password" placeholder="{{ form.password.vars.label }}" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="nom" id="nom" name="_nom" placeholder="{{ form.nom.vars.label }}" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="prenom" id="prenom" name="_prenom" placeholder="{{ form.prenom.vars.label }}" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="dateNaissance" id="dateNaissance" name="_dateNaissance" placeholder="{{ form.dateNaissance.vars.label }}" class="form-control"/>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </div>
        <div class="footer">
            <button type="submit" class="btn bg-olive btn-block">Login</button>
        </div>
    </form>
{% endblock %}