<!DOCTYPE html>
<html lang="fr-Fr">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    {% stylesheets 'css/*' filter="cssrewrite" %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet"/>
    {% endstylesheets %}
    {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}
</head>
<body class="bg-black">
<section class="form-box" id="login-box">
    {% block body %}
        {% if error %}
            <div>{{ error.message }}</div>
        {% endif %}
        <div class="header">Sign In</div>

        <form action="{{ path('eklerni_cas_login_check') }}" method="post">
            <div class="body bg-gray">
                <div class="form-group">
                    <input type="text" id="username" name="_username" value="{{ last_username }}"
                           placeholder="Username" class="form-control"/>
                </div>

                <div class="form-group">
                    <input type="password" id="password" name="_password" placeholder="Password" class="form-control"/>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </div>
            <div class="footer">
                <button type="submit" class="btn bg-olive btn-block">Login</button>
            </div>
        </form>
    {% endblock %}
</section>
</div>

{% javascripts 'js/*' %}
<script src="{{ asset_url }}" type="text/javascript"></script>
{% endjavascripts %}
{% javascripts 'js/AdminLTE/*' %}
<script src="{{ asset_url }}" type="text/javascript"></script>
{% endjavascripts %}
{% block javascripts %}{% endblock %}
</body>
</html>