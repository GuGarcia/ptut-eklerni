{% extends "EklerniCASBundle:Template:template.html.twig" %}
{% block body %}
    {% if error %}
        <div>{{ error.message }}</div>
    {% endif %}
    <div class="header">Sign In</div>

    <form action="{{ path('eklerni_cas_login_check') }}" method="post">
        <div class="body bg-gray">
            <div class="form-group">
                <input type="text" id="username" name="_username" value="{{ last_username }}"
                       placeholder="Username" class="form-control"/>
            </div>

            <div class="form-group">
                <input type="password" id="password" name="_password" placeholder="Password" class="form-control"/>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </div>
        <div class="footer">
            <button type="submit" class="btn bg-olive btn-block">Login</button>
        </div>
    </form>
{% endblock %}