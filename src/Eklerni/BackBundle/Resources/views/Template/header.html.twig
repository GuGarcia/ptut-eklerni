<header class="header">
    <a href="{{ path("eklerni_back_homepage") }}" class="logo">Eklerni</a>
    <nav class="navbar navbar-static-top" role="navigation">
        <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button" title="{% trans %}btn.navigation.toogle{% endtrans %}">
            <span class="sr-only"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>

        <div class="navbar-right">
            <ul class="nav navbar-nav">
            {% if app.user %}
                <li class="dropdown user user-menu">
                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                        <i class="glyphicon glyphicon-user"></i>
                        <span>{{ app.user.nom }} {{ app.user.prenom }} <i class="caret"></i></span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header bg-light-blue">
                            <img alt="{% trans %}personne.picture{% endtrans %}" class="img-circle img-header" src="{{ asset(app.user.picture) }}">
                            <p>
                                {{ app.user.nom }} {{ app.user.prenom }}
                                <small>
                                    {% if is_granted('ROLE_DIRECTEUR') %}
                                        {% trans %}role.directeur{% endtrans %}
                                    {% else %}
                                        {% trans %}role.enseignant{% endtrans %}
                                    {% endif %}
                                </small>
                            </p>
                        </li>
                        <!-- Menu Body -->
                        <li class="user-body">
                            <div class="col-xs-6 text-center">&nbsp;</div>
                            <div class="col-xs-6 text-center">
                                <a href="{{ path('eklerni_cas_password_change') }}">{% trans %}password.change{% endtrans %}</a>
                            </div>
                        </li>
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="pull-left">
                                <a class="btn btn-default btn-flat" href="{{ path("eklerni_cas_profile") }}"><i class="fa fa-user-md"></i> {% trans %}btn.profile{% endtrans %}</a>
                            </div>
                            <div class="pull-right">
                                <a class="btn btn-default btn-flat" href="{{ path("eklerni_cas_logout") }}"><i class="fa fa-power-off"></i> {% trans %}btn.logout{% endtrans %}</a>
                            </div>
                        </li>
                    </ul>
                </li>
            {% endif %}
            </ul>
        </div>
    </nav>
</header>