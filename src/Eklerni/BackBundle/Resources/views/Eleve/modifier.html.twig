{% extends "EklerniBackBundle:Template:template.html.twig" %}

{% block body %}
    <form action="" method="post">
        <div class="body bg-gray">
            {{ eklerni.row(form.eleve.username) }}
            {{ eklerni.row(form.eleve.password) }}
            {{ eklerni.row(form.eleve.nom) }}
            {{ eklerni.row(form.eleve.prenom) }}
            {{ eklerni.row(form.eleve.dateNaissance) }}
            {{ form_widget(form._token) }}
        </div>
        {% if form_error is defined and form_error is not null %}
            <div class="callout callout-danger">
                <h4>{{ form_error }}</h4>
            </div>
        {% endif %}
        <div class="footer">
            {{ eklerni.submit(form.eleve.valider) }}
        </div>
    </form>
{% endblock %}