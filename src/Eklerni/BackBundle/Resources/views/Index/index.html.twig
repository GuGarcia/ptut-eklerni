{% extends "EklerniBackBundle:Template:template.html.twig" %}

{% if eleves|length > 0 %}
    {% set elevesTable %}
    <table class="table">
        <tr>
            <th>Nom</th>
            <th>Classe</th>
        </tr>
        {% for eleve in eleves %}
            <tr>
                <td><a href="{{ path("eklerni_back_eleve") }}">{{ eleve.nom }} {{ eleve.prenom }}</a></td>
                <td><a href="{{ path("eklerni_back_classe_fiche", {idClasse:eleve.classe.id}) }}">{{ eleve.classe.nom }}</a></td>
            </tr>
        {% endfor %}
    </table>
    {% endset %}
{% else %}
    {% set elevesTable %}
    Il n'y a pas d'eleve dans cette Classe.
    {% endset %}
{% endif %}

{% if enseignant.classes|length > 0 %}
    {% set classesTable %}
    <table class="table" id="profs">
        <tr>
            <th>Nom</th>
            <th>Niveau</th>
            <th>Nb Élève</th>
        </tr>
        {% for classe in enseignant.classes %}
            <tr>
                <td>
                    <a href="{{ path("eklerni_back_classe_fiche", {idClasse:classe.id}) }}">{{ classe.nom }}</a>
                </td>
                <td>
                    {{ classe.niveau }}
                </td>
                <td>
                    {{ classe.eleves|length }}
                </td>
            </tr>
        {% endfor %}
    </table>
    {% endset %}
{% else %}
    {% set classesTable %}
    Vous n'avez pas de Classe
    {% endset %}
{% endif %}
{% set footerclasses %}
<a href="{{ path("eklerni_back_classe_create") }}" id="add_prof_link" class="btn btn-danger"><i class="fa fa-plus"> Classe</i></a>
<a href="{{ path("eklerni_back_classe_create_ecole") }}" id="add_prof_link" class="btn btn-danger"><i class="fa fa-plus"> Ecole</i></a>
{% endset %}
    {% block body %}
        <div class="row">
            <div class="col-md-4">
                {{ eklerni.block("Liste des Classes", classesTable, footerclasses, "danger") }}
                {{ eklerni.block("Liste des Eleves", elevesTable, "", "primary") }}
            </div>
            <div class="col-md-4">

            </div>
            <div class="col-md-4">

            </div>
        </div>

    {% endblock %}