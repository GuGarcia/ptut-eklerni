{% extends "EklerniBackBundle:Template:template.html.twig" %}

{% block body %}
    {% if classes|length > 0 %}
        <div class="box-body table-responsive">
            <div id="example2_wrapper" class="dataTables_wrapper form-inline" role="grid">
                <table id="example2" class="table table-bordered table-hover dataTable" aria-describedby="example2_info">
                    <thead>
                    <tr>
                        <th rowspan="1" colspan="1">id</th>
                        <th rowspan="1" colspan="1">Ecole</th>
                        <th rowspan="1" colspan="1">Niveau</th>
                        <th rowspan="1" colspan="1">Nom</th>
                        <th rowspan="1" colspan="1">Nombre d'Élèves</th>
                    </tr>
                    </thead>
                    <tfoot>
                    </tfoot>
                    <tbody role="alert" aria-live="polite" aria-relevant="all">
                    {% for classe in classes %}
                        <tr class="odd">
                            <td class=" ">{{ classe.id }}</td>
                            <td class=" ">{{ classe.ecole }}</td>
                            <td class=" ">{{ classe.niveau }}</td>
                            <td class=" sorting_1">{{ classe.nom }}</td>
                            <td class=" ">{{ classe.eleves|length }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    {% endif %}
    <a href="{{ path("eklerni_back_classe_create") }}"><button class="btn btn-default">Ajout une Classe</button></a>
{% endblock %}