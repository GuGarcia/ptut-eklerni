<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    
    <route id="eklerni_back_direction_create_ecole" pattern="/ajouterecole">
        <default key="_controller">EklerniBackBundle:Ecole:ajouter</default>
    </route>
    <route id="eklerni_back_direction_update_ecole" pattern="/modifier/{idEcole}">
        <default key="_controller">EklerniBackBundle:Ecole:modifier</default>
        <requirement key="idEcole">\d+</requirement>
    </route>
</routes>